<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.somnus.mybatis.dao.UserInfoDao">
	<resultMap id="BaseResultMap" type="com.somnus.mybatis.domain.UserInfo" >
		<id column="ID" property="id" jdbcType="INTEGER" />
		<result column="USERNAME" property="username" jdbcType="VARCHAR" />
		<result column="PASSWORD" property="password" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		ID,USERNAME,PASSWORD
	</sql>
	<select id="selectByKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from T_USER
		where ID = #{id,jdbcType=INTEGER}
	</select>
	
	<select id="selectByParams" resultMap="BaseResultMap" parameterType="java.util.Map" >
	  	select 
	    	<include refid="Base_Column_List" />
	    from T_USER
	    where 
	    USERNAME like #{username,jdbcType=VARCHAR}
  </select>
</mapper>