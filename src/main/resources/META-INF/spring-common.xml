<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
						http://www.springframework.org/schema/beans/spring-beans.xsd">

    
    <bean id="jmsAction" class="com.somnus.action.JmsAction" parent="parentMessageListener"/>

    <bean id="jmsMessageContainer" parent="parentListenerContainer">
        <property name="destination" ref="incomeQueue"/>
        <property name="messageListener" ref="jmsAction"/>
    </bean>
    <bean id="jmsMessageContainerBack" parent="parentListenerContainer">
        <property name="destination" ref="incomeQueue"/>
        <property name="messageListener" ref="jmsAction"/>
    </bean>

</beans> 